@model eBookStore.Models.Book.BookRequestViewModel 


@{
    var isEdited = ViewData["IsEdit"] as bool?;
    var bookid = ViewData["bookId"] as string;
}

<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Book" asp-controller="Manage">Book List</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@(isEdited == true ? "Edit Book" : "Detail Book")</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            @if (isEdited == true)
            {
                <div class="pd-20 card-box mb-30">
                <form method="post" id="form-update">
                            <input id="book_id" name="book_id" class="form-control" type="hidden">
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Title</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="title" name="title" class="form-control" type="text" placeholder="Title" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Type</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="type" name="type" class="form-control" type="number" placeholder="Type" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Price</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="price" name="price" class="form-control" type="text" placeholder="Price" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Advance</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="advance" name="advance" class="form-control" type="text" placeholder="Advance">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Royalty</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="royalty" name="royalty" class="form-control" type="text" placeholder="Royalty">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Year Sales</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="ytd_sales" name="ytd_sales" class="form-control" type="text" placeholder="Year Sales">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Notes</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="notes" name="notes" class="form-control" type="text" placeholder="Note">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Published Date</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="published_date" name="published_date" class="form-control" type="date" readonly="readonly" placeholder="publishedDate">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Publisher</label>
                        <select id="pub_id" name="pub_id" class="custom-select2 form-control" style="width: 100%; height: 38px;">
                        </select>
                    </div>
                    <div class="btn-list">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Book" asp-controller="Manage" type="submit" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
                </div>
            }
            else
            {
                <div class="pd-20 card-box mb-30">
                <form method="post" asp-action="UpdateBook" asp-controller="Manage">
                            <input id="book_id" name="book_id" class="form-control" type="hidden">
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Title</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="title" name="title" class="form-control" type="text" placeholder="Title" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Type</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="type" name="type" class="form-control" type="number" placeholder="Type" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Price</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="price" name="price" class="form-control" type="number" placeholder="Price" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Advance</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="advance" name="advance" class="form-control" type="number" placeholder="Advance" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Royalty</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="royalty" name="royalty" class="form-control" type="number" placeholder="Royalty" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Year Sales</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="ytd_sales" name="ytd_sales" class="form-control" type="number" placeholder="Year Sales" readonly="readonly">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Notes</label>
                        <div class="col-sm-12 col-md-10">
                            <input id="notes" name="notes" class="form-control" type="text" placeholder="Note" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Publisher</label>
                        <select id="pub_id" name="pub_id" class="custom-select2 form-control" disabled style="width: 100%; height: 38px;">
                            
                        </select>
                    </div>
                    <div class="btn-list">
                        <a asp-action="Book" asp-controller="Manage" type="submit" class="btn btn-primary">Back</a>
                    </div>
                </form>
            </div>
            }
            
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            const apiUrl = 'https://localhost:44322/odata';
            var publisherid = null;
            $.ajax({
              url: apiUrl + "/Book/"+@bookid + "?$expand=publisher",
              type: 'GET',
              dataType: 'json',
              success: function(data) {
                for (const [key, value] of Object.entries(data)) {
                    console.log(`${key}: ${value}`);
                    //if (key.includes("Publisher"))
                    //    $(`[id="${key}"]`).val(value.publisher_name)
                    if (key.includes("date")) $(`[id="${key}"]`).val(value.substring(0, 10))
                    else $(`[id="${key}"]`).val(value);
                    if (key == "pub_id") publisherid = value;
                }
                 
              },
              error: function(xhr, status, error) {
                console.error('Error:', error);
              }
            });
        });
    </script>
    <script>
        $(document).ready(function () {

              // AJAX call to fetch data from the API endpoint
              $.ajax({
                url: "https://localhost:44322/odata/Publisher",
                type: "GET",
                dataType: "json",
                success: function (data) {
                  $.each(data.value, function (index, res) {
                   content = `<option value="${res.pub_id}">${res.publisher_name}</option>`;
                  $("select").append(content);
                }); // Populate the select element with the received data
                },
                error: function (error) {
                  console.error("Error fetching data: " + error);
                },
              });
        });
    </script>
    <script>
        $(document).ready(function() {
            $('#form-update').submit(function(event) {
              event.preventDefault(); // Prevent the default form submission

              // Get the form data
              //const formData = JSON.stringify($(this).serializeArray());
              const formData = ConvertToJson($(this));

              // Call the API to add the data
              const apiUrl = 'https://localhost:44322/odata';
              $.ajax({
                url: apiUrl +"/Book/"+@bookid,
                type: 'Put',
                cache: false,
                processData: false,
                contentType: 'application/json',
                dataType: 'json',
                data: formData,
                success: function(data) {
                  // Handle the API response here
                  console.log('API response:', data);
                  window.location.href = '/Manage/Book';
                  // Optionally, perform any actions on successful response
                },
                error: function(xhr, status, error) {
                  // Handle the error here
                  console.error('Error:', error);
                }
              });
            });
        });
    </script>
}