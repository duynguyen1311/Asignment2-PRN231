@model eBookStore.Models.Author.AuthorRequestViewModel 

<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Author" asp-controller="Manage">Author List</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Edit Author</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <form method="post" asp-action="UpdateAuthor" asp-controller="Manage">
                    <div class="form-group row">
                        <label asp-for="@Model.first_name" class="col-sm-12 col-md-2 col-form-label">First Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.first_name" class="form-control" type="text" placeholder="First name" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.last_name" class="col-sm-12 col-md-2 col-form-label">Last Name</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.last_name" class="form-control" type="text" placeholder="Last name" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.email_address" class="col-sm-12 col-md-2 col-form-label">Email</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.email_address" class="form-control" type="email" placeholder="email" required="required">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.phone" class="col-sm-12 col-md-2 col-form-label">Phone</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.phone" class="form-control" type="text" placeholder="phone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.address" class="col-sm-12 col-md-2 col-form-label">Address</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.address" class="form-control" type="text" placeholder="address">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.city" class="col-sm-12 col-md-2 col-form-label">City</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.city" class="form-control" type="text" placeholder="City">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.state" class="col-sm-12 col-md-2 col-form-label">State</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.state" class="form-control" type="text" placeholder="State">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.zip" class="col-sm-12 col-md-2 col-form-label">Country</label>
                        <div class="col-sm-12 col-md-10">
                            <input asp-for="@Model.zip" class="form-control" type="text" placeholder="Country">
                        </div>
                    </div>
                    <div class="btn-list">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Author" asp-controller="Manage" type="submit" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>